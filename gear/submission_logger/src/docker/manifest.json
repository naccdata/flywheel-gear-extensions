{
    "name": "submission-logger",
    "label": "Submission Logger",
    "description": "Creates submit visit events in the transaction log when files are uploaded to ingest projects",
    "version": "0.1.0",
    "author": "NACC",
    "maintainer": "NACC <nacchelp@uw.edu>",
    "cite": "",
    "license": "MPL-2.0",
    "url": "https://naccdata.github.io/flywheel-gear-extensions",
    "source": "https://github.com/naccdata/flywheel-gear-extensions",
    "environment": {
        "FLYWHEEL": "/flywheel/v0"
    },
    "custom": {
        "gear-builder": {
            "category": "utility",
            "image": "naccdata/submission-logger:0.1.0"
        },
        "flywheel": {
            "suite": "Utility",
            "show-job": true
        }
    },
    "inputs": {
        "api-key": {
            "base": "api-key"
        },
        "input_file": {
            "description": "The CSV input file containing visit data for submission logging",
            "base": "file",
            "type": {
                "enum": [
                    "tabular data"
                ]
            }
        },
        "form_configs_file": {
            "description": "The YAML file containing form project configurations (optional, required only for form data)",
            "base": "file",
            "optional": true,
            "type": {
                "enum": [
                    "source code"
                ]
            }
        }
    },
    "config": {
        "dry_run": {
            "description": "Whether to do a dry run",
            "type": "boolean",
            "default": false
        },
        "apikey_path_prefix": {
            "description": "The instance specific AWS parameter gearbot path prefix",
            "type": "string",
            "default": "/prod/flywheel/gearbot"
        },
        "environment": {
            "description": "Environment for event logging (prod/dev)",
            "type": "string",
            "default": "prod"
        },
        "event_bucket": {
            "description": "S3 bucket name for storing visit events",
            "type": "string",
            "default": "nacc-event-logs"
        },
        "supported_formats": {
            "description": "Supported file formats for processing",
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": ["csv"]
        },
        "continue_on_error": {
            "description": "Whether to continue processing on errors",
            "type": "boolean",
            "default": true
        },
        "module": {
            "description": "Module name for form processing (UDS, FTLD, LBD, etc.) - required only when form_configs_file is provided",
            "type": "string",
            "default": ""
        }
    },
    "command": "/bin/run"
}