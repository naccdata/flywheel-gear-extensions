{
    "name": "pull-metadata",
    "label": "Pull Metadata",
    "description": "Pulls CSV metadata from S3, partitions by center and distributes to centers",
    "version": "0.0.9",
    "author": "zstark@uw.edu",
    "maintainer": "NACC <nacchelp@uw.edu>",
    "cite": "",
    "license": "MPL-2.0",
    "url": "https://naccdata.github.io/flywheel-gear-extensions/pull_metadata",
    "source": "https://github.com/naccdata/flywheel-gear-extensions",
    "environment": {
        "FLYWHEEL": "/flywheel/v0"
    },
    "custom": {
        "gear-builder": {
            "category": "utility",
            "image": "naccdata/pull-metadata:0.0.9"
        },
        "flywheel": {
            "suite": "NACC Admin Gears",
            "show-job": true
        }
    },
    "inputs": {
        "api-key": {
            "base": "api-key"
        }
    },
    "config": {
        "dry_run": {
            "description": "Whether to do a dry run",
            "type": "boolean",
            "default": false
        },
        "s3_param_path": {
            "description": "Parameter path for S3 credentials",
            "type": "string"
        },
        "apikey_path_prefix": {
            "description": "The instance specific AWS parameter gearbot path prefix",
            "type": "string",
            "default": "/prod/flywheel/gearbot"

        },
        "destination_label": {
            "description": "Label of destination project",
            "type": "string"
        },
        "table_list": {
            "description": "List of table file names",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "table_name": {
                        "description": "table file name",
                        "type": "string"
                    },
                    "site_id_column": {
                        "description": "name of the ADCID column in table",
                        "type": "string"
                    }
                },
                "required": [ "table_name", "site_id_column"]
            }
        }
    },
    "command": "/bin/run"
}