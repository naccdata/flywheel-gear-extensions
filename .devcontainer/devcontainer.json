{
    "name": "Python 3",

    // need to build manually due to yarn gpg issue described in
    // https://github.com/devcontainers/features/issues/1543
    "build": {
        "dockerfile": "Dockerfile"
    },

    "postCreateCommand": "bash ./.devcontainer/post_create_command.sh ${containerWorkspaceFolder}",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": true,
            "moby": true
        },
        "ghcr.io/devcontainers/features/go:1": {}
    },
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/home/vscode/bin"
    },

    // Configure tool-specific properties.

    "customizations": {
        "vscode": {
            "settings": {
                "dev.containers.dockerCredentialHelper": false,
                "editor.detectIndentation": false
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one",
                "charliermarsh.ruff"
            ]
        }
    }
}