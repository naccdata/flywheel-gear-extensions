{
    "name": "csv-to-json-transformer",
    "label": "CSV to JSON Transformer",
    "description": "Converts rows of CSV file to JSON files",
    "version": "0.0.11",
    "author": "NACC",
    "maintainer": "NACC <nacchelp@uw.edu>",
    "cite": "",
    "license": "MPL-2.0",
    "url": "https://naccdata.github.io/flywheel-gear-extensions",
    "source": "https://github.com/naccdata/flywheel-gear-extensions",
    "environment": {
        "FLYWHEEL": "/flywheel/v0"
    },
    "custom": {
        "gear-builder": {
            "category": "utility",
            "image": "naccdata/csv-to-json-transformer:0.0.11"
        },
        "flywheel": {
            "suite": "Curation",
            "show-job": true
        }
    },
    "inputs": {
        "api-key": {
            "base": "api-key"
        },
        "input_file": {
            "description": "a CSV file with NACCIDs",
            "base": "file",
            "type": {
                "enum": [
                    "tabular data"
                ]
            }
        }
    },
    "config": {
        "apikey_path_prefix": {
            "description": "The instance specific AWS parameter path prefix for apikey",
            "type": "string",
            "default": "/prod/flywheel/gearbot"
        },
        "admin_group": {
            "description": "Name of the admin group",
            "type": "string",
            "default": "nacc"
        },
        "hierarchy_labels" : {
            "description": "the string templates for session/acquisition/filename",
            "type": "object",
            "default": [ 
                {
                    "type": "session",
                    "template": ""
                },
                {
                    "type": "acquisition",
                    "template": "",
                    "transform": "upper"
                },
                {
                    "type": "filename",
                    "template": ""
                }
            ]
        }
    },
    "command": "/bin/run"
}