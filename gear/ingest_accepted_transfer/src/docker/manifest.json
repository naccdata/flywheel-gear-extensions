{
    "name": "ingest-accepted-transfer",
    "label": "Ingest to Accepted Transfer",
    "description": "Soft copy form data from ingest projects to respective accepted projects",
    "version": "0.0.1",
    "author": "NACC",
    "maintainer": "NACC <nacchelp@uw.edu>",
    "cite": "",
    "license": "MPL-2.0",
    "url": "https://naccdata.github.io/flywheel-gear-extensions",
    "source": "https://github.com/naccdata/flywheel-gear-extensions",
    "environment": {
        "FLYWHEEL": "/flywheel/v0"
    },
    "custom": {
        "gear-builder": {
            "category": "utility",
            "image": "naccdata/ingest-accepted-transfer:0.0.1"
        },
        "flywheel": {
            "suite": "Utility",
            "show-job": true
        }
    },
    "inputs": {
        "api-key": {
            "base": "api-key"
        }
    },
    "config": {
        "dry_run": {
            "description": "Whether to do a dry run",
            "type": "boolean",
            "default": false
        },
        "apikey_path_prefix": {
            "description": "The instance specific AWS parameter path prefix for apikey",
            "type": "string",
            "default": "/prod/flywheel/gearbot"
        },
        "admin_group": {
            "description": "Name of the admin group",
            "type": "string",
            "default": "nacc"
        },
        "ingest_project": {
            "description": "Label of the ingest project",
            "type": "string",
            "default": "retrospective-form"
        },
        "accepted_project": {
            "description": "Label of the accepted project",
            "type": "string",
            "default": "accepted"
        },
        "time_interval": {
            "description": "Time interval in days between the runs (input -1 to ignore)",
            "type": "integer",
            "default": 7
        },
        "batch_size": {
            "description": "Number of acquisition files for one batch",
            "type": "integer",
            "default": 10000
        }
    },
    "command": "/bin/run"
}