{
    "name": "apoe-transformer",
    "label": "APOE Transformer",
    "description": "Transforms APOE data from NRAD to NACC encoding",
    "version": "0.1.0",
    "author": "NACC",
    "maintainer": "NACC <nacchelp@uw.edu>",
    "cite": "",
    "license": "MPL-2.0",
    "url": "https://naccdata.github.io/flywheel-gear-extensions",
    "source": "https://github.com/naccdata/flywheel-gear-extensions",
    "environment": {
        "FLYWHEEL": "/flywheel/v0"
    },
    "custom": {
        "gear-builder": {
            "category": "utility",
            "image": "naccdata/apoe-transformer:0.1.0"
        },
        "flywheel": {
            "suite": "Curation",
            "show-job": true
        }
    },
    "inputs": {
        "api-key": {
            "base": "api-key"
        },
        "input_file": {
            "description": "The input APOE genotype file",
            "base": "file",
            "type": {
                "enum": [
                    "tabular data"
                ]
            }
        }
    },
    "config": {
        "dry_run": {
            "description": "Whether to do a dry run",
            "type": "boolean",
            "default": false
        },
        "output_filename": {
            "description": "The output filename; defaults to the input filename with `_apoe_transformed` postfixed",
            "type": "string",
            "default": null
        },
        "target_project": {
            "description": "Target project to write results to; defaults to the same project that the input file was uploaded to",
            "type": "string",
            "default": null
        },
        "delimiter": {
            "description": "The input CSV delimiter",
            "type": "string",
            "default": ","
        }
    },
    "command": "/bin/run"
}